<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/green</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="textoNegroTVBoldTitulo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>
    <style name="textoNegroTVnormal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>
    <style name="textoBlancoTVBoldMenu" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>

    <style name="EditTextNormal" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="textview_mensajes" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/textview_mensaje</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>
    <style name="scrollview_track_vertical" parent="TextAppearance.AppCompat">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>