<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/Transparente"
    tools:context=".fragmentos.fragmentosMainAdmin.Precios">

    <androidx.legacy.widget.Space
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/etiqueta1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Gorra: "
            android:textColor="@color/moradoAdmin"
            style="@style/textoNegroTVBoldTitulo"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/edtx_gorra"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/EditTextNormal"
            android:singleLine="true"
            android:layout_gravity="center"
            android:inputType="number"/>
    </LinearLayout>
    <androidx.legacy.widget.Space
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/etiqueta2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Taza: "
            android:textColor="@color/moradoAdmin"
            style="@style/textoNegroTVBoldTitulo"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/edtx_taza"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/EditTextNormal"
            android:layout_gravity="center"
            android:singleLine="true"
            android:inputType="number"/>
    </LinearLayout>
    <androidx.legacy.widget.Space
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/etiqueta3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Playera\nhombre: "
            android:textColor="@color/moradoAdmin"
            style="@style/textoNegroTVBoldTitulo"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/edtx_playerah"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/EditTextNormal"
            android:singleLine="true"
            android:inputType="number"/>
    </LinearLayout>
    <androidx.legacy.widget.Space
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/etiqueta4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Playera\nmujer: "
            android:textColor="@color/moradoAdmin"
            style="@style/textoNegroTVBoldTitulo"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/edtx_playeram"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/EditTextNormal"
            android:singleLine="true"
            android:inputType="number"/>
    </LinearLayout>

</LinearLayout>